<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.wsj.androidble.MainActivity">

    <Button
        android:onClick="openBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开蓝牙"/>
    <Button
        android:onClick="closeBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭蓝牙"/>

    <Button
        android:onClick="startLeScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始扫描"/>
    <Button
        android:onClick="stopLeScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止扫描"/>
    <Button
        android:onClick="connectBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接设备"/>
    <Button
        android:onClick="disconnectBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开设备"/>




</LinearLayout>
